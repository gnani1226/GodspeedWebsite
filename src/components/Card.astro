---
interface Props {
  title?: string;
  body?: string;
  href?: string;
}

const { href, title, body } = Astro.props;
---

<div class="hover-up">
  <button class="text-white font-bold icons">Developer</button>
</div>



<li class="link-card">
  <a href={href} target="_blank">
    <h2>
      {title}
    </h2>
  </a>
</li>


