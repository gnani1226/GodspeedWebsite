<style>


.hover-up {
      background: linear-gradient(to right, #b50ed8,#6c18e8);
      padding: 10px 30px 10px 30px;
      border-radius: 50px;
      display: inline-block;
      background-color: #f0f0f0;
      border: 1px solid #ccc;
      transition: transform 0.2s ease-in-out; /* Add a transition for smooth movement */
    }

    .hover-up:hover {
    transform: translateY(-10px); /* Move the element 5 pixels upward on hover */
    }






  .link-card {
    list-style: none;
    display: flex;
    margin: 20px;
    /* width: var(--abc); */
    text-align: center;
    padding: 1px;
    /* background-color: #45306d; */

    /* #23262d; */
    /* background-image: none; */
    /* background-size: 400%; */
    border-radius: 10px;
    /* background-position: 100%; */
    /* transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1); */
    /* overflow: hidden; */
    background: linear-gradient(45deg,#0ce39a,#69007f,#fc0987);
    display: flex;
    justify-content: center;
    align-items: center;


  }
  .link-card > a {
   margin: 2px;
    text-decoration: none;
    /* line-height: 0.5; */
    padding: calc(1.5rem - 1px);
    border-radius: 8px;
    color: white;
    inset: 2px;
    background: #272727;
    opacity: 0.9;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 800;
    color: #ffffff;
    /* transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1); */
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
  .link-card:hover {

    transform: translateY(-10px);
    transition: transform 0.5s ease;
  }
  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    /* background-image: var(--accent-gradient); */
  }
  /* .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  } */
</style>
